{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist-electron",
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2022",
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src/electron/**/*"]
}
